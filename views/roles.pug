doctype html
html
    head
        title= title
        <script src="https://code.jquery.com/jquery-3.2.1.min.js" integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4=" crossorigin="anonymous"></script>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous">
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
        <link href="https://gitcdn.github.io/bootstrap-toggle/2.2.2/css/bootstrap-toggle.min.css" rel="stylesheet">
        <script src="https://gitcdn.github.io/bootstrap-toggle/2.2.2/js/bootstrap-toggle.min.js"></script>
    body
    .container
        .header.clearfix
            h3.text-muted= title
        .jumbotron
            h1 Roles for <b><u>#{user}</b></u>
            p.lead <i>Turn <b>ON</b> only those roles you wish to receive @notifications for.</i>
        .row.marketing
            form
                .col-lg-4
                    each name, index in pcontent
                        if index < (pcontent.length/3)
                            if name.UserHasRole
                                <p><input type="checkbox" name="RoleToggle" data-on="Notify" data-off="Off" checked data-toggle="toggle" data-onstyle="success" data-size="large" data-id="#{name.id}"><label class="checkbox-inline" style="font-weight:bold;color:#{name.hexColor}"> #{name.name} </style> </label></p>
                            else
                                <p><input type="checkbox" name="RoleToggle" data-on="Notify" data-off="Off" data-toggle="toggle" data-onstyle="success" data-size="large" data-id="#{name.id}"><label class="checkbox-inline" style="font-weight:bold;color:#{name.hexColor}"> #{name.name} </style> </label></p>
                .col-lg-4
                    each name, index in pcontent
                        if index < (pcontent.length/3) < (index < (pcontent.length/3)*2)
                            if name.UserHasRole
                                <p><input type="checkbox" name="RoleToggle" data-on="Notify" data-off="Off" checked data-toggle="toggle" data-onstyle="success" data-size="large" data-id="#{name.id}"><label class="checkbox-inline" style="font-weight:bold;color:#{name.hexColor}"> #{name.name} </style> </label></p>
                            else
                                <p><input type="checkbox" name="RoleToggle" data-on="Notify" data-off="Off" data-toggle="toggle" data-onstyle="success" data-size="large" data-id="#{name.id}"><label class="checkbox-inline" style="font-weight:bold;color:#{name.hexColor}"> #{name.name} </style> </label></p>
                .col-lg-4
                    each name, index in pcontent
                        if (index < (pcontent.length/3)*2) < (index < pcontent.length)
                            if name.UserHasRole
                                <p><input type="checkbox" name="RoleToggle" data-on="Notify" data-off="Off" checked data-toggle="toggle" data-onstyle="success" data-size="large" data-id="#{name.id}"><label class="checkbox-inline" style="font-weight:bold;color:#{name.hexColor}"> #{name.name} </style> </label></p>
                            else
                                <p><input type="checkbox" name="RoleToggle" data-on="Notify" data-off="Off" data-toggle="toggle" data-onstyle="success" data-size="large" data-id="#{name.id}"><label class="checkbox-inline" style="font-weight:bold;color:#{name.hexColor}"> #{name.name} </style> </label></p>
    include ajax.js
